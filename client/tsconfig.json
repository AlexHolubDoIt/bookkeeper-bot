{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "typeRoots": ["./node_modules/@types", "./src/types"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src"
  ],
  "exclude": ["node_modules"]
}
